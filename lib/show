#!/bin/sh

validate_modifiers()
{
  OUTPUT="/dev/stdout"

  [ "$1" = "-h" ] && show_usage

  while [ $# -gt 0 ]
  do
    [ "$1" = "-c" ] && TO_CLIPBOARD=true
    [ "$1" = "-1" ] && ONE_TIME=true
    [ "$1" = "-s" ] && OUTPUT="/dev/null"
    [ $1 != -* ] && TOKEN_NAME="$1"
    shift
  done
}


show_usage()
{
  [ -n "$1" ] && echo "ERROR: $1"
  echo "Usage: $( basename ${0} ) show [-h] [-1] [-c] [-s] <Token Name>"
  echo
  echo " -h : This help"
  echo " -1 : Get one password and exit."
  echo " -c : Copy to clipboard."
  echo " -s : Silent. Do not output anything to console."
  exit 1
}

#Init
validate_modifiers $@

read_token_name

get_token

echo > $( echo "$OUTPUT" )

while true; do
  remaining_seconds
  X=$( oathtool --totp -b "$TOKEN" )

  [ $TO_CLIPBOARD ] && copy_to_clipboard $X
  [ $ONE_TIME ] && [ $WAIT_FOR_NEXT -gt 0 ] && [ $WAIT_FOR_NEXT -gt $REMAINING ] && waiting_for="(Waiting for next token ...)"

  printf "\r[%.2d] %d $waiting_for" $REMAINING $X > $( echo "$OUTPUT" )

  [ $ONE_TIME ] && [ $WAIT_FOR_NEXT -lt $REMAINING ] && break

  sleep 1
done

echo
